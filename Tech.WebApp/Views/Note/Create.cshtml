@model Tech.Entities.Kayit

@{ ViewBag.Title = "Kayit Ekle"; }

<link href="~/Content/validation-summary.css" rel="stylesheet" />

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>
</div>

<div class="row">

    <div class="col-md-8 col-md-offset-2" style="margin-left:20%">
        @*@using (Html.BeginForm())*@
          @using (Html.BeginForm("Create", "Kayit", FormMethod.Post, new { enctype = "multipart/form-data" }))

        {
@Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Kayit</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @*@if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                 <img src="~/images/@Model.ImagePath" class="img-circle" width="128" height="128" />
                @Html.HiddenFor(model => model.ImagePath)
            }*@

                <br /><br />
                <input type="file" name="NoteImage" id="NoteImage" class="form-control" /><br />
                <span class="glyphicon glyphicon-info-sign">&nbsp;</span>
                <span class="btn-xs"><i>Lütfen jpg, jpeg ya da png formatı kullanın.</i></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Text, 5, 30, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IsDraft, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.IsDraft)
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CategoryId, "Kategori", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-8">
                    @Bootstrap.Button("success", string.Empty, "submit", "plus", " Kaydet")
                    @Bootstrap.LinkButton("/Kayit/Index", "default", string.Empty, string.Empty, "arrow-left", " Geri Dön!")
                </div>
            </div>
        </div>}

    </div>
</div>